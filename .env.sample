# Server Configuration
PORT=8080
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/apihub_go
DB_NAME=apihub_go

# JWT Configuration
ACCESS_TOKEN_SECRET=your-super-secret-access-token-change-this-in-production
ACCESS_TOKEN_EXPIRY=1d
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-change-this-in-production
REFRESH_TOKEN_EXPIRY=10d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5000

# Redis (for rate limiting - optional)
REDIS_URI=redis://localhost:6379

# Email Configuration (for password reset, verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@apihub.com

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./public/images

# Application URL
FREEAPI_HOST_URL=http://localhost:8080

# Payment Gateway (Optional)
# Razorpay
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# OAuth (Optional)
# Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:8080/api/v1/users/google/callback

# GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:8080/api/v1/users/github/callback

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Testing
MONGO_MEMORY_SERVER_PORT=10000
